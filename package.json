{
  "name": "mail",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node app.js",
    "start:dev": "nodemon app.js",
    "build:css": "tailwindcss -i ./public/css/styles.css -o ./public/css/output.css --minify",
    "dev:css": "tailwindcss -i ./public/css/styles.css -o ./public/css/output.css --watch",
    "build:frontend": "vite build",
    "dev:frontend": "vite",
    "build": "npm run build:css && npm run build:frontend",
    "dev": "concurrently \"npm run start:dev\" \"npm run dev:css\" \"npm run dev:frontend\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "express": "^5.1.0",
    "marked": "^16.1.2",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.0",
    "svelte": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.4.19"
  }
}
