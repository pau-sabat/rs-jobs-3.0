{
  "name": "R&SJobs-3.0",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node app.js",
    "dev": "npm run build && concurrently \"nodemon app.js\" \"npm run build:css:watch\" \"npm run build:watch\"",
    "build:css": "tailwindcss -i ./public/css/styles.css -o ./public/css/output.css",
    "build:css:watch": "tailwindcss -i ./public/css/styles.css -o ./public/css/output.css --watch",
    "build": "npm run build:css && vite build",
    "build:watch": "vite build --watch",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dayjs": "^1.11.13",
    "express": "^5.1.0",
    "marked": "^16.1.2",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.5",
    "@types/node": "^24.5.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.19"
  }
}
