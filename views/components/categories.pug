mixin categories(data)

    - const categories = data.categories

    section(class="pt-6 pb-[50px] lg:pt-[50px] lg:pb-[100px]")
        .container
            .flex.flex-col.gap-4
                div(class="flex flex-col gap-4 md:flex-row justify-between md:items-end")
                    div(class="flex flex-col lg:flex-row gap-2 lg:gap-4 lg:items-end")
                        h2(class="text-heading-mobile-3 lg:text-heading-desktop-3 font-bold text-primary")=categories.title
                        p(class="text-small-mobile lg:text-small-desktop text-secondary")=categories.subtitle
                    a(href=categories.cta.href class="text-small-mobile lg:text-small-desktop text-primary underline")=categories.cta.text

                .flex.flex-nowrap.justify-between.gap-2.overflow-x-auto
                    each item in categories.items
                        a(href=item.href class="flex gap-2.5 items-center justify-center px-3 py-2 border border-primary rounded-full whitespace-nowrap")
                            span=item.icon
                            span.font-bold=item.text
