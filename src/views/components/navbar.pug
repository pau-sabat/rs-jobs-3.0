mixin navbar(data)

  header(class="bg-white shadow-md sticky top-0 z-[60] h-[65px]")
    nav(class="mx-auto px-6 lg:px-8 py-3 relative")
      .flex.items-center.justify-between

        .flex.items-center
          a(href="/")
            img(src='/assets/images/logo.svg' alt="RSJobs logo" class="w-[176px] h-[41px]")

        div(class="hidden lg:flex items-center gap-[26px]")
          .flex.items-center.gap-2
            a(href='/ofertas-trabajo' class="text-secondary hover:text-primary transition-all font-semibold px-1.5") Buscar trabajo
            a(href='/busqueda-de-empresas' class="text-secondary hover:text-primary transition-all font-semibold px-1.5") Buscar empresa

        div(class="hidden lg:flex items-center gap-2 h-10")
          button(class="flex items-center gap-1.5 p-2 text-secondary")
            | es
            svg(width="10" height="5" viewBox="0 0 10 5" fill="none")
              path(d="M0 0L5 5L10 0H0Z" fill="currentColor")
          a(href='/login').btn.btn-primary Soy empresa
          a(href='/').btn.btn-secondary-outline Acceso candidato

        div(class="lg:hidden")
          button(aria-label="Open mobile menu").h-6.w-6.flex.items-center.justify-center.text-secondary#mobile-menu-button
            svg(width="18" height="13" viewBox="0 0 18 13" fill="none" data-open="true")
              path(d="M0 12.5H18V10.5H0V12.5ZM0 7.5H18V5.5H0V7.5ZM0 0.5V2.5H18V0.5H0Z" fill="currentColor")
            svg(width="14" height="15" viewBox="0 0 14 15" fill="none" class="hidden" data-close="true")
              path(d="M14 1.91L12.59 0.5L7 6.09L1.41 0.5L0 1.91L5.59 7.5L0 13.09L1.41 14.5L7 8.91L12.59 14.5L14 13.09L8.41 7.5L14 1.91Z" fill="currentColor")

      #mobile-menu(class="hidden lg:hidden fixed top-[65px] right-0 w-[70%] max-w-[350px] h-[calc(100vh-65px)] bg-light shadow-md transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto")
        .px-6.py-4.flex.flex-col.items-stretch.justify-between.min-h-full.gap-10
          .flex.flex-col.gap-4
            a(href='/ofertas-trabajo' class="text-secondary font-bold h-10 flex items-center justify-center") Buscar trabajo
            a(href='/' class="text-secondary font-bold h-10 flex items-center justify-center") Buscar empresa
            .flex.items-center.justify-center.h-10
              button(class="flex items-center gap-1.5 p-2 text-secondary")
                | es
                svg(width="10" height="5" viewBox="0 0 10 5" fill="none")
                  path(d="M0 0L5 5L10 0H0Z" fill="currentColor")
          .flex.flex-col.gap-2
            a.btn(class=`btn-secondary-outline` href='/') Soy empresa
            a.btn(class=`btn-primary` href='/') Acceso candidato


